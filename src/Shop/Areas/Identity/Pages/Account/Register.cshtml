@page
@model RegisterModel

<link rel="stylesheet" href="~/css/input.css" type="text/css" />
<link rel="stylesheet" href="~/css/material-checkbox.css" type="text/css" />
<link rel="stylesheet" href="~/css/material-button.css" type="text/css" />
<link rel="stylesheet" href="~/css/social-circle-button.css" type="text/css" />
<link rel="stylesheet" href="~/css/alert.css" type="text/css" />

@{
    ViewData["Title"] = "Register";
}


<div class="row" style="justify-content:center;">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form_div" style="display:flex; margin-bottom:.5rem; gap:.75rem;">
                <div style="flex: 50%; width: 100%; height: 100%;">
                    <div style="position:relative; width: 100%; height: 100%;">
                        <input asp-for="Input.FirstName" class="form_input" id="firstname" placeholder=" " autocomplete="given-name" aria-required="true" autofocus />
                        <label asp-for="Input.FirstName" for="" class="form_label"></label>
                    </div>
                </div>
                <div style="flex: 50%; width: 100%; height: 100%;">
                    <div style="position:relative; width: 100%; height: 100%;">
                        <input asp-for="Input.LastName" class="form_input" id="lastname" placeholder=" " autocomplete="family-name" aria-required="true" />
                        <label asp-for="Input.LastName" for="" class="form_label"></label>
                    </div>
                </div>
            </div>
            <div class="form_error_alert" id="name-alert"></div>

            <div class="form_div" style="margin-bottom:.5rem;">
                <input asp-for="Input.Email" class="form_input" id="email" placeholder=" " autocomplete="email" aria-required="true" />
                <label asp-for="Input.Email" for="" class="form_label"></label>
            </div>
            <div class="form_error_alert" id="email-alert"></div>

            <div class="form_div" style="display:flex; margin-bottom:.5rem; gap:.75rem;">
                <div style="flex: 50%; width: 100%; height: 100%;">
                    <div style="position:relative; width: 100%; height: 100%;">
                        <input asp-for="Input.Password" class="form_input" id="password" placeholder=" " autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.Password" for="" class="form_label"></label>
                    </div>
                </div>
                <div style="flex: 50%; width: 100%; height: 100%;">
                    <div style="position:relative; width: 100%; height: 100%;">
                        <input asp-for="Input.ConfirmPassword" class="form_input" id="confirmpassword" placeholder=" " autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.ConfirmPassword" for="" class="form_label"></label>
                    </div>
                </div>
            </div>
            <div class="form_error_alert" id="password-alert"></div>



            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>
<head runat="server">
    <script src="~/js/VerifyRegister.js" type="text/javascript"></script>
</head>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
