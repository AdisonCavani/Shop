@page
@model LoginModel

<link rel="stylesheet" href="~/css/input.css" type="text/css" />
<link rel="stylesheet" href="~/css/material-checkbox.css" type="text/css" />
<link rel="stylesheet" href="~/css/material-button.css" type="text/css" />

@{
	ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
	<div class="col-md-4">
		<section>
			<form id="account" method="post">
				<h2>Use a local account to log in.</h2>
				<hr />
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form_div" style="margin-bottom:1.5rem;">
					<input asp-for="Input.Email" class="form_input" placeholder=" " autocomplete="username" aria-required="true" />
					<label asp-for="Input.Email" for="" class="form_label"></label>
					<span asp-validation-for="Input.Email" class="text-danger"></span>
				</div>
				<div class="form_div" style="margin-bottom:.75rem;">
					<input asp-for="Input.Password" class="form_input" placeholder=" " autocomplete="current-password" aria-required="true" />
					<label asp-for="Input.Password" for="" class="form_label"></label>
					<span asp-validation-for="Input.Password" class="text-danger"></span>
				</div>
				<div>
					<div class="checkbox" style="margin-bottom:1rem;">
						<label asp-for="Input.RememberMe" class="material-checkbox">
							<input asp-for="Input.RememberMe">
							<span>@Html.DisplayNameFor(m => m.Input.RememberMe)</span>
						</label>
					</div>
				</div>
				<div style="display:flex;">
					<p>
						<a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
					</p>
					<button id="login-submit" type="submit" class="material-button">Log in</button>
				</div>
			</form>
		</section>
	</div>
	<div class="col-md-6 col-md-offset-2">
		<section>
			<h3>Use another service to log in.</h3>
			<hr />
			@{
				if ((Model.ExternalLogins?.Count ?? 0) == 0)
				{
					<div>
						<p>
							There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
								article
								about setting up this ASP.NET application to support logging in via external services
							</a>.
						</p>
					</div>
				}
				else
				{
					<form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
						<div>
							<p>
								@foreach (var provider in Model.ExternalLogins)
								{
									<button type="submit" class="btn btn-light btn-block" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
										@{
											string imageSrc = string.Empty;
											if (provider.DisplayName == "Google")
												imageSrc = "https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Google_%22G%22_Logo.svg/512px-Google_%22G%22_Logo.svg.png";
											else if (provider.DisplayName == "Facebook")
												imageSrc = "https://upload.wikimedia.org/wikipedia/commons/thumb/0/05/Facebook_Logo_%282019%29.png/240px-Facebook_Logo_%282019%29.png";
										}

										<img width="20" style="margin-bottom:3px; margin-right:5px" alt="" src="@imageSrc" />
										Log in with @provider.DisplayName
									</button>
								}
							</p>
						</div>
					</form>
				}
			}
		</section>
	</div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
